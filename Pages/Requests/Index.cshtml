@page
@model TruckAplication.Pages.Requests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Truck)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].Truck.Driver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Request[0].RentedDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Request) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Truck.Model)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Truck.Driver.DriverName)
                </td>
                <td>@Convert.ToInt32(item.RentedDays) days</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
